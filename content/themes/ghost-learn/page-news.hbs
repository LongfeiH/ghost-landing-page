{{!< default}}
{{> hero-page-title }}
<section class="course-area pt-20 xl:pt-10 news-{{@number}}">
   <div class="container mx-auto">
      {{#get "posts" include="tags,authors"  filter="tag:hash-news"}}
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
         {{#foreach posts}}
         {{> cards/card-post}}
         {{/foreach}}
      </div>
      {{> pagination}}
      {{/get}}
   </div>
</section>