{{#match style "one"}}
<div class="author-box-1 border hover:border-blue-100 hover:bg-blue-50 rounded-lg group p-6 duration-300">
   {{#if profile_image}}
   <div class="feature-image w-44 h-44  rounded-full overflow-hidden mx-auto mb-6">
      <a href="{{url}}">
      <img class="  group-hover:scale-105 duration-300 h-48 w-48 object-cover" src="{{profile_image}}" alt="{{name}}">
      </a>
   </div>
   {{/if}}
   <div class="author-content text-center">
      <h6 class="author-name font-serif text-xl text-gray-800 hover:text-blue-800 font-bold duration-300 mb-4">
         <a href="{{url}}">{{name}}</a>
      </h6>
      <span class="author-course-count inline-block text-sm text-gray-400 group-hover:text-blue-800 font-bold bg-blue-50 group-hover:bg-blue-100 py-1 px-4 mb-4 duration-300">
      {{#get "posts" include="count.posts" filter="authors:{{slug}}+tag:hash-course"}}
      {{plural posts.length empty='No Courses' singular='1 Course' plural='% Courses'}}
      {{/get}}        
      </span>
      {{#if bio}}
      <p class="author-bio text-base text-gray-400 font-normal">{{bio}}</p>
      {{/if}}
   </div>
</div>
{{/match}}
