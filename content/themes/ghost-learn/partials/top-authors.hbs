{{#match style "one"}}
{{#get "authors" limit="all" include="count.posts" order="count.posts desc"}}
{{#if authors}}
<section class="author-area pt-20 xl:pt-28">
   <div class="container mx-auto">
      <div class="section-title text-center max-w-xl mx-auto mb-6 lg:mb-16">
         <h4 class="font-serif text-4xl lg:text-5xl text-gray-800 font-bold mb-6">{{t "Top Tutors"}}</h4>
         <p class="text-lg text-gray-400 font-normal">{{t "Explore our top tutors profile here. All of our tutors are highly-educated professionals who have direct teaching and tutoring experience."}} </p>
      </div>
      <div class="author-slider">
         {{#foreach authors}}
         {{> cards/card-author style="two"}}
         {{/foreach}}
      </div>
   </div>
</section>
{{/if}}
{{/get}}
{{/match}}
{{#match style "two"}}
<section class="author-area pt-20 xl:pt-28">
   <div class="container mx-auto">
      <div class="grid gap-16 grid-cols-1 lg:grid-cols-12 items-center ">
         <div class=" lg:col-span-6 xl:col-span-3"><img class="rounded-full w-64 h-64 object-cover" src="{{asset "images/author.webp"}}" alt=""></div>
         <div class="lg:col-span-6 xl:col-span-9">
            <h4 class="font-serif text-4xl lg:text-5xl text-gray-800 font-bold mb-6">{{t "Jhon Doe"}}</h4>
            <h5 class="font-serif text-lg  text-gray-800 font-medium mb-6">Industry Strategist at Ricoh | Coach | Problem Solver | Storyteller</h5>
            <p class="text-lg text-gray-400 font-normal">An accomplished, results-oriented thought leader working at the intersection of executive leadership, consulting and strategic planning to drive business performance and significant revenue growth at an international level. </p>
         </div>
      </div>
   </div>
</section>
{{/match}}