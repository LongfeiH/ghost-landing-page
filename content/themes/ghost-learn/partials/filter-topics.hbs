{{#get "tags" include="count.posts" order="count.posts desc" limit="all"}}
<script>
   let topicNum;
   let length = 0;
</script>
{{#foreach tags}}
<script> topicNum = '{{@number}}'; </script>
{{#get "posts" include="tags,authors" filter="tag:{{slug}}+tag:hash-course"}}
<script>
   length = '{{posts.length}}';
   if (length <= 0) {
      $(`.topic-${topicNum}`).remove();
   }
</script>
{{/get}}
