{{#match home "one"}}
<div class="hero-area relative overflow-hidden pt-20 ">
   <div class="container mx-auto">
      <div class="hero-box-1 grid items-center sm:grid-cols-2 lg:grid-cols-12 gap-24">
         <div class="hero-cotent relative lg:col-span-7">
            <h1 class="font-serif text-4xl lg:text-5xl xl:text-6xl text-gray-800 font-bold  mb-12 !leading-tight">{{@site.title}}</h1>
            {{#if @site.description}}
            <h4 class="text-xl text-gray-400 font-normal mb-12">{{@site.description}}</h4>
            {{/if}}
            <a href="/blog"
               class="hero-btn-1 inline-block text-lg text-white font-medium bg-gradient-to-r to-blue-800 via-blue-200 from-blue-800 bg-size-200 bg-pos-0 hover:bg-pos-100 transition-all duration-300 py-4 px-10 rounded-full mr-4 mb-2  ">{{t "Our Blog"}}</a>
            <a href="/courses"
               class="hero-btn-2 inline-block px-10 py-4 font-medium text-lg text-gray-400  bg-blue-50 hover:bg-blue-800 rounded-full hover:text-white group duration-300 mr-4 mb-2 ">{{t "View Courses"}}</a>
         </div>
         {{#if @site.cover_image}}
         <div class="feature-image relative lg:col-span-5">
            <img class="w-full h-96 object-cover rounded-xl learn-cover-img" width="750" height="923" src="{{@site.cover_image}}"
               alt="{{@site.title}}">
         </div>
         {{/if}}
      </div>
   </div>
</div>
{{/match}}
