<div class="page-navigation lg:flex gap-8 justify-between pb-20 xl:pb-36 {{#if prev_post}} pb-20 xl:pb-36 {{/if}} {{#if next_post}} pb-20 xl:pb-36 {{/if}}">
   {{#prev_post}}
   <div class="navigation-box-prev rounded-lg shadow hover:shadow-lg hover:-translate-y-1 group p-6 my-4 duration-300">
      <p class="text-base leading-relaxed text-gray-400 font-normal">{{t "Previous Lesson"}}</p>
      <h4 class="font-serif text-2xl text-gray-800 hover:text-blue-800 font-bold mb-2 duration-300">
         <a href="{{url}}">{{title}}</a>
      </h4>
      <p class="text-base leading-relaxed text-gray-400 font-normal mb-4">{{date published_at format="DD MMMM, YYYY"}}</p>
      {{#primary_tag}}
      <a href="{{url}}"
         class="inline-block whitespace-nowrap px-8 py-2 text-sm font-bold text-red-800 bg-red-800/[0.2] rounded-full hover:opacity-80 duration-300">{{name}}</a>
      {{/primary_tag}}
   </div>
   {{/prev_post}}
   {{#next_post}}
   <div
      class="navigation-box-next rounded-lg lg:text-right shadow hover:shadow-lg hover:-translate-y-1 group p-6 my-4 duration-300">
      <p class="text-base leading-relaxed text-gray-400 font-normal">{{t "Next Lesson"}}</p>
      <h4 class="font-serif text-2xl text-gray-800 hover:text-blue-800 font-bold mb-2 duration-300">
         <a href="{{url}}">{{title}}</a>
      </h4>
      <p class="text-base leading-relaxed text-gray-400 font-normal mb-4">{{date published_at format="DD MMMM, YYYY"}}</p>
      {{#primary_tag}}
      <a href="{{url}}"
         class="inline-block whitespace-nowrap px-8 py-2 text-sm font-bold text-violet-800 bg-violet-800/[0.2] rounded-full hover:opacity-80 duration-300">{{name}}</a>
      {{/primary_tag}}
   </div>
   {{/next_post}}
</div>