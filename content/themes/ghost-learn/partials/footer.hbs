<footer class="footer-area relative  pt-20 xl:pt-28">
   <div class="footer-bg bg-blue-50 absolute bottom-0 left-0 right-0 w-full block h-[calc(100%-11.4rem)]">
   </div>
   <div class="container mx-auto">
      <div class=" bg-white shadow p-8 md:p-14 rounded-lg mb-8 lg:mb-12 relative z-10">
         <div class="newsletter-cta grid gap-6 grid-cols-1 lg:grid-cols-12 items-center border-b border-blue-100 pb-8 lg:pb-12 mb-8 lg:mb-16">
            <div class="lg:col-span-6 xl:col-span-8">
               <h3 class="font-serif text-2xl lg:text-4xl text-gray-800 font-bold  mb-3"> {{t "Subscribe to Learn"}} ðŸ“«</h3>
               <p class="text-base leading-relaxed text-gray-400 font-normal">               {{t "Subscribe to receive latest courses, news, and updates."}}</p>
            </div>
            <div class="lg:col-span-6 xl:col-span-4">
               {{> newsletter}}
            </div>
         </div>
         <div class="footer-list">
            {{navigation type="secondary"}}
         </div>
      </div>
      <div
         class="md:flex flex-row-reverse justify-between gap-6 items-center text-center lg:text-left pb-14 relative z-10">
         <ul class="inline-flex items-center text-center lg:text-right gap-2">
            {{#if facebook_url }}
            <li><a class="group bg-blue-50 hover:bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300  border "
               href="{{facebook_url}}">
               {{> icons/facebook}}
               </a>
            </li>
            {{/if}}
            {{#if twitter_url }}
            <li><a class="group bg-blue-50 hover:bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300  border "
               href="{{twitter_url}}">
               {{> icons/twitter}}
               </a>
            </li>
            {{/if}}
            <li><a class="group bg-blue-50 hover:bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300  border "
               href="https://instagram.com">
               {{> icons/instagram}}
               </a>
            </li>
            <li><a class="group bg-blue-50 hover:bg-white w-10 h-10 rounded-full flex items-center justify-center duration-300  border "
               href="https://linkedin.com">
               {{> icons/linkedin}}
               </a>
            </li>
         </ul>
         {{#if @custom.footer_note}}
         <div class="my-2">
            <p class="text-sm leading-relaxed text-gray-400 font-normal">
               &copy; 
               <span id="spanYear">
                  <script> document.getElementById('spanYear').innerHTML = new Date('Y'); </script>
               </span>
               {{@custom.footer_note}} | {{t "Developed by"}} <a class="text-gray-800 hover:text-blue-800 duration-300" rel="nofollow"
                  href="https://www.themeix.com/">{{t "Themeix"}}</a> <br>  {{t "Published with"}} <a class="text-gray-800 hover:text-blue-800 duration-300" rel="nofollow" href="https://ghost.org?via=themeix75">Ghost</a>
            </p>
         </div>
         {{/if}}
      </div>
      {{#if @custom.back_to_scroll}}
      <a class="scroll-top-button fixed left-4 bottom-4 z-10 inline-flex items-center justify-center w-12 h-12 border-2 border-blue-200 bg-white hover:bg-blue-50 duration-300 rounded-full"
         href="#">
         <svg width="12" height="20" viewBox="0 0 12 20" fill="none" xmlns="http://www.w3.org/2000/svg">
