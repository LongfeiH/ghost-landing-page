{{#get "posts" include="tags,authors" filter="tag:-[hash-blog, hash-lesson]" limit="12"}}
{{#if posts}}
<section class="lesson-area pt-20 xl:pt-28  ">
   <div class="container mx-auto">
      <div class="section-title text-center max-w-xl mx-auto mb-6 lg:mb-16">
         <h4 class="font-serif text-4xl lg:text-5xl text-gray-800 font-bold mb-6">{{t "Latest Courses"}}</h4>
         <p class="text-lg text-gray-400 font-normal">{{t "Explore the latest course, update and tools here"}} </p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">        
      </div>
   </div>
   <div class="container mx-auto">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 posts">
         {{#foreach posts }}
         {{> cards/card-course}}
         {{/foreach}}
      </div>
      <div class="mt-14 text-center">
         <a href="/courses" class="inline-block px-8 py-4 text-base font-medium text-blue-800 border border-blue-200 hover:bg-blue-50 rounded-full hover:text-blue-800 group duration-300">{{t "View All Courses"}}</a>
      </div>
   </div>
   </div>
</section>
{{/if}}
{{/get}}